@page
@model WebShop.Pages.ShopModel
@{
	ViewData["Title"] = "Магазин";
}

<h1 class="text-center">
	Добро пожаловать в Магазин!
</h1>
<hr />
<h3 class="text-center">
	Список всех товаров
</h3>
<br />

<div class="container">

	<div class="row">

		@{
			foreach (var item in Model.ItemService.AllItems)
			{
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-header">
							<a class="navbar-brand">@item.Name</a>
						</div>
						<div class="card-body">
							<img src="@item.ImageURL"
						 	alt="@item.Name

			" class="w-100 mt-2 mb-2">
							<br />
							<h6>
								Описание:
							</h6>
							<p>
								@item.ShortDescription
							</p>
						</div>
						<div class="card-footer d-flex justify-content-between align-items-center">
							Цена: @item.Price

							<a href="#" class="btn btn-primary rounded-pill">Подробности</a>
						</div>
					</div>
				</div>


			}
		}
	</div>

</div> 
